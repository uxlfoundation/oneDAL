{
  "extends": [
    "config:recommended",
    ":preserveSemverRanges"
  ],
  "pip_requirements": {
    "fileMatch": [
      "(^|/)docs/requirements.txt$"
    ]
  },
  "packageRules": [
    {
      "groupName": "Doc packages",
      "matchUpdateTypes": ["patch", "minor"],
      "schedule": ["before 2am on the first day of the month"],
      "matchFileNames": ["docs/requirements.txt"]
    },
    {
      "groupName": "Dockerfile",
      "schedule": ["before 2am on the first day of the month"],
      "matchFileNames": ["**/*.Dockerfile"]
    },
    {
      "matchPackageNames": [
        "intel-oneapi-compiler-dpcpp-cpp",
        "intel-oneapi-mkl-devel",
        "intel-oneapi-tbb-devel"
      ],
      "matchUpdateTypes": ["major", "minor"],
      "groupName": "intel-oneapi-apt"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^\\.ci\\/env\\/editorconfig-checker\\.sh$"],
      "matchStrings": ["VERSION=(?<currentValue>v\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "editorconfig-checker/editorconfig-checker",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "fileMatch": ["^\\.ci\\/env\\/tbb.+$", "^(\\.github\\/workflows|\\.ci\\/pipeline)\\/ci.+$", "^dev\\/download_tbb.sh"],
      "matchStrings": [
        "\\s*TBB_DEFAULT_VERSION\\s*=\\s*['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?",
        "\\s*set\\s+TBBVERSION\\s*=\\s*['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?",
        "\\s*TBB_VERSION\\s*[:=]\\s*['\"]?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)['\"]?"
      ],
      "depNameTemplate": "uxlfoundation/oneTBB",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "fileMatch": ["^\\.ci\\/env\\/openblas\\.sh$"],
      "matchStrings": ["BLAS_DEFAULT_VERSION=(?<currentValue>v\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "OpenMathLib/OpenBLAS",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "fileMatch": ["^\\.ci\\/env\\/bazelisk\\.sh$", "^dev\\/docker\\/onedal\\-dev\\.Dockerfile", "^dev\\/bazel\\/README\\.md"],
      "matchStrings": [
        "BAZELISK_VERSION=(?<currentValue>v\\d+\\.\\d+\\.\\d+)",
        "github\\.com/bazelbuild/bazelisk/releases/download/(?<currentValue>v\\d+\\.\\d+\\.\\d+)/bazelisk-[^\"' ]+"
      ],
      "depNameTemplate": "bazelbuild/bazelisk",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "fileMatch": ["^\\.ci\\/env\\/apt\\.sh$"],
      "matchStrings": [
        ".*\\b(?<depName>intel-oneapi-compiler-dpcpp-cpp)=(?<currentValue>\\d{4}\\.\\d+\\.\\d+-\\d+).*"
      ],
      "datasourceTemplate": "deb",
      "registryUrlTemplate": "https://apt.repos.intel.com/oneapi?suite=all&components=main&binaryArch=amd64"
    },
    {
      "customType": "regex",
      "fileMatch": ["^\\.ci\\/env\\/apt\\.sh$"],
      "matchStrings": [
        ".*\\b(?<depName>intel-oneapi-mkl-devel)=(?<currentValue>\\d{4}\\.\\d+\\.\\d+-\\d+).*"
      ],
      "datasourceTemplate": "deb",
      "registryUrlTemplate": "https://apt.repos.intel.com/oneapi?suite=all&components=main&binaryArch=amd64"
    },
    {
      "customType": "regex",
      "fileMatch": ["^\\.ci\\/env\\/apt\\.sh$"],
      "matchStrings": [
        ".*\\b(?<depName>intel-oneapi-tbb-devel)=(?<currentValue>\\d{4}\\.\\d+\\.\\d+-\\d+).*"
      ],
      "datasourceTemplate": "deb",
      "registryUrlTemplate": "https://apt.repos.intel.com/oneapi?suite=all&components=main&binaryArch=amd64"
    }
  ]
}
